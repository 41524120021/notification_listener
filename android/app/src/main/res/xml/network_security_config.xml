<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for API endpoints -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Allow HTTP traffic to specific domains -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">ahlipulsa.com</domain>
        <domain includeSubdomains="true">digitu.my.id</domain>
        <domain includeSubdomains="true">isipulsaku.com</domain>
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>
</network-security-config>
